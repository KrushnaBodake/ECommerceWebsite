

@model ECommerceWebsite.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prodname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prodname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10" >
            <img src="@Url.Content(Model.ImageUrl)"  class=" card-img-top" style="width:300px">
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Company)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Company)
        </dd>
       
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Catname)
        </dt>
        <dd class = "col-sm-10">
            @ViewData["Name"]

        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Discount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Discount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
        <h5 > Produt Qty</h5>
        </dt>
        <dd class = "col-sm-10">
        <input type="number" name="Qty" min="1" max="@Html.DisplayFor(model=>model.Stock)" class="form-control" class="col-sm-10" />
        </dd>
       
    </dl>
</div>
<div>

    <a href="~/UserProduct/Addtocart/@Model.Prodid" class="btn btn-primary btn-sm">Add to Cart</a>
    <a href="~/Order/AddOrder/@Model.Prodid" class="btn btn-primary btn-sm">Order</a>

    <a asp-action="CartIndex" class="btn btn-primary btn-sm">Back to List</a>
</div>
